    style.
      body  {
      background-image: url("images/awesome.jpg");
      background-origin: padding-box;
      background-size:cover;
      color: orange;
      margin-left: 10%;
      }
      .lead {
      color: orange;
      text-align: center;
      font-weight: bold;
      }
      h1 {
      color: orange;
      text-align: center;
      font-weight: bold;
      }
      section {
      overflow: auto;
      }

      .css_blink {
      -webkit-animation-name: blinker;
      -webkit-animation-duration: 3s;
      -webkit-animation-timing-function: linear;
      -webkit-animation-iteration-count: infinite;
      -moz-animation-name: blinker;
      -moz-animation-duration: 3s;
      -moz-animation-timing-function: linear;
      -moz-animation-iteration-count: infinite;
      animation-name: blinker;
      animation-duration: 3s;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
      }
      @-moz-keyframes blinker {
      0% { opacity: 1.0; }
      50% { opacity: 0.0; }
      100% { opacity: 1.0; }
      }
      @-webkit-keyframes blinker {
      0% { opacity: 1.0; }
      50% { opacity: 0.0; }
      100% { opacity: 1.0; }
      }
      @keyframes blinker {
      0% { opacity: 1.0; }
      50% { opacity: 0.0; }
      100% { opacity: 1.0;}
      }

  body
    h1 Resume creation - part 3
    p.lead Education:
    form(class="pure-form", role='form', action="/objective",method="post")
      .form-group
        label UserID:
        input.form-control(type='number', name="oaccountId", value="#{user.accountId}", style="width: 50px;", readonly, required)
      br
      #container
      br
      button#btn1(type='button', onclick='addObjective(); return false;') Add Objective
      &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      button.btn.btn-success(type='submit', class="pure-button pure-button-primary") Save
    
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
    script(src='https://code.jquery.com/jquery-2.2.0.min.js')
    script.
      function addObjective(){
      var description = document.createElement("textarea");
      description.rows = "2";
      description.cols = "100";
      description.required = "true";
      description.name = "odescription";
      description.placeholder = "Description";
      container.appendChild(description);
      container.appendChild(document.createElement("br"));
      container.appendChild(document.createElement("br"));
      btn1.style.display = "none";
      }