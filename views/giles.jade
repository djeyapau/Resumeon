html(ng-app='myApp')
  head
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    // Optional theme
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css')
    title Account List App
  body
    .container(ng-controller='AppCtrl')
      h1 Account List App
      table.table
        thead
          tr
            th Id
            th Username
            th Name
            th Password
            th Gender
            th Birthday
            th Â 
        tbody
          tr
            td
              input.form-control(ng-model='account.accountId')
            td
              input.form-control(ng-model='account.username')
            td
              input.form-control(ng-model='account.name')
            td
              input.form-control(ng-model='account.password')
            td
              input.form-control(ng-model='account.gender')
            td
              input.form-control(ng-model='account.birthday')
            td
              button.btn.btn-primary(ng-click='addAccount()') Add Account
            td
              button.btn.btn-info(ng-click='update()') Update
              button.btn.btn-info(ng-click='deselect()') Clear
          tr(ng-repeat='account in accountlist')
            td {{account.accountId}}
            td {{account.username}}
            td {{account.name}}
            td {{account.password}}
            td {{account.gender}}
            td {{account.birthday}}
            td
              button.btn.btn-danger(ng-click='remove(account._id)') Remove
            td
              button.btn.btn-warning(ng-click='edit(account._id)') Edit
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular.min.js')
    script(src='controllers/controller.js')
