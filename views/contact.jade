    style.
      body  {
      background-image: url("images/awesome.jpg");
      background-origin: padding-box;
      background-size:cover;
      color: orange;
      margin-left: 10%;
      }
      .lead {
      color: orange;
      text-align: center;
      font-weight: bold;
      }
      h1 {
      color: orange;
      text-align: center;
      font-weight: bold;
      }
      section {
      overflow: auto;
      }

      .css_blink {
      -webkit-animation-name: blinker;
      -webkit-animation-duration: 3s;
      -webkit-animation-timing-function: linear;
      -webkit-animation-iteration-count: infinite;
      -moz-animation-name: blinker;
      -moz-animation-duration: 3s;
      -moz-animation-timing-function: linear;
      -moz-animation-iteration-count: infinite;
      animation-name: blinker;
      animation-duration: 3s;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
      }
      @-moz-keyframes blinker {
      0% { opacity: 1.0; }
      50% { opacity: 0.0; }
      100% { opacity: 1.0; }
      }
      @-webkit-keyframes blinker {
      0% { opacity: 1.0; }
      50% { opacity: 0.0; }
      100% { opacity: 1.0; }
      }
      @keyframes blinker {
      0% { opacity: 1.0; }
      50% { opacity: 0.0; }
      100% { opacity: 1.0;}
      }

  body
    h1 Resume creation - part 1
    p.lead Contact Information:
    form(class="pure-form", role='form', action="/contact",method="post")
      if (user)
      .form-group
        input.form-control(type='text', name="username", placeholder='Name', style="width: 250px;", required)
      .form-group
        input.form-control(type='text', name="caddress", placeholder='Address', style="width: 250px;", required)
      .form-group
        input.form-control(type='text', name="ccity", placeholder='City', style="width: 250px;", required)
      .form-group
        input.form-control(type='text', name="cstate", placeholder='State', style="width: 250px;", required)
      .form-group
        input.form-control(type='number', name="czip", placeholder='Zip code', style="width: 250px;", required)
      .form-group
        input.form-control(type='text', name="ccountry", placeholder='Country', style="width: 250px;", required)
      .form-group
        input.form-control(type='email', name="cemail",  placeholder='Email', style="width: 250px;", required)
      .form-group
        input.form-control(type='number', name="cphone",  placeholder='Phone number', style="width: 250px;", required)
      .form-group
        label UserID:
        input.form-control(type='number', name="caccountId", value="#{user.accountId}", style="width: 100px;", readonly)

      button.btn.btn-success(type='submit', class="pure-button pure-button-primary") Save & Next
      &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      p 
        span.css_blink Save once page before proceeding to next page

    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
    script(src='https://code.jquery.com/jquery-2.2.0.min.js')
    .script
